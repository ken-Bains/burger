        <div class="row">
            <div class="col-md-6">
                <ul class="list-group">
                    <li class="list-group-item list-group-item-dark text-center">Waiting to be devoured</li>
                    {{#each data}}
                        {{#unless this.devoured}}
                            <li class="list-group-item">{{this.burger_name}}<button type="button" data-id="{{this.id}}" class="btn btn-outline-primary btn-sm float-right devourBtn">Devour it</button></li>
                        {{/unless}}
                    {{/each}}
                </ul>
            </div>
            <div class="col-md-6">
                <ul class="list-group">
                    <li class="list-group-item list-group-item-dark text-center">Devoured!!</li>
                    {{#each data}}
                        {{#if this.devoured}}
                            <li class="list-group-item list-group-item-light"><strike>{{this.burger_name}}</strike></li>
                        {{/if}}
                    {{/each}}
                </ul>
            </div>
        </div>